<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Indian Tour Packages</title>
    <style>
        .package {
            border: 1px solid #ddd;
            padding: 15px;
            margin: 15px 0;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }
        img {
            width: 300px;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <h1>Indian Tour Packages</h1>

    <% if (indiaPackages.length === 0) { %>
        <p>No packages available.</p>
    <% } else { %>
        <% indiaPackages.forEach(package => { %>
            <div class="package">
                <h2><%= package.title %></h2>
                <p><strong>Place:</strong> <%= package.place %></p>
                <img src="<%= package.image.url %>" alt="<%= package.title %>">
                <p><strong>Price:</strong> â‚¹<%= package.price %></p>
                <p><strong>Duration:</strong> <%= package.duration %></p>
                <p><strong>Route:</strong> <%= package.route %></p>
                <p><strong>Type:</strong> <%= package.type %></p>
            </div>
        <% }) %>
    <% } %>

    <a href="/">Back to Home</a>
</body>
</html>
