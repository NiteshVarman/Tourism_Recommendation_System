<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= placeName %> Tour Packages</title>
</head>
<body>
    <h1>Tour Packages in <%= placeName %></h1>

    <% if (filteredPackages.length === 0) { %>
        <p>No packages available for <%= placeName %>.</p>
    <% } else { %>
        <% filteredPackages.forEach(package => { %>
            <div class="package">
                <h2><%= package.title %></h2>
                <p><strong>Place:</strong> <%= package.place %></p>
                <img src="<%= package.image.url %>" alt="<%= package.title %>" width="300">
                <p><strong>Price:</strong> â‚¹<%= package.price %></p>
                <p><strong>Duration:</strong> <%= package.duration %></p>
                <p><strong>Route:</strong> <%= package.route %></p>
                <p><strong>Type:</strong> <%= package.type %></p>
            </div>
        <% }) %>
    <% } %>

    <a href="/">Back to Home</a>
</body>
</html>
